<% if @article.errors.any? %>
  <h2 style="color:red;">The following errors prevented from the article being created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class='col-xs-12'>
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"})  do |val| %>
    <div class="form-group">
      <div clas="control-label col-sm-2">
        <%= val.label :title %>
      </div>
      <div class="col-sm-8">
        <%= val.text_field :title, class: "form-control", placeholder: "title of article", autofocus: true %>
      </div>
    </div>
    
    
    <div class="form-group">
      <div clas="control-label col-sm-2">
        <%= val.label :description %>
      </div>
      <div class="col-sm-8">
        <%= val.text_area :description, rows: 10, class: "form-control", placeholder: "body of article" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= val.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
    
    <% end %>
  <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to 'Cancel request and return to articles listing', articles_path %> ]
  </div>

  </div>
</div>