<h1>Edit existing article</h1>

<% if @article.errors.any? %>
  <h2>The following errors prevented from the article being created</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |val| %>
  <p id="form_text">
    <%= val.label :title %><br>
    <%= val.text_field :title %>
  </p>
  <p id="form_desc">
    <%= val.label :description %><br>
    <%= val.text_area :description %>
  </p>
  <p>
    <%= val.submit %>
  </p>

<% end %>

<%= link_to 'Back to articles listing', articles_path %>